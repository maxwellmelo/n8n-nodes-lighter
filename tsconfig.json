{
	"compilerOptions": {
		"strict": true,
		"module": "commonjs",
		"moduleResolution": "node",
		"target": "es2019",
		"lib": ["es2019"],
		"declaration": true,
		"skipLibCheck": true,
		"noImplicitAny": true,
		"removeComments": true,
		"forceConsistentCasingInFileNames": true,
		"noImplicitReturns": true,
		"noUnusedLocals": true,
		"noUnusedParameters": true,
		"esModuleInterop": true,
		"resolveJsonModule": true,
		"outDir": "./dist",
		"rootDir": ".",
		"sourceMap": true,
		"baseUrl": ".",
		"paths": {
			"n8n-workflow": ["./node_modules/n8n-workflow"]
		}
	},
	"include": [
		"credentials/**/*.ts",
		"nodes/**/*.ts"
	],
	"exclude": [
		"node_modules/**"
	]
}
